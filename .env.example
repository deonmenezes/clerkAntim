# Environment Variables Template
# Copy this file to .env.local and fill in the actual values

# Site URL (used for sitemap and metadata)
SITE_URL=https://smoothtradings.com

# API URL for client-side requests
NEXT_PUBLIC_API_URL=https://smoothtradings.com

# MongoDB connection string
MONGODB_URL=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/your-database

# Clerk authentication keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
CLERK_SECRET_KEY=your-clerk-secret-key

# Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/
